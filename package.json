{
  "name": "rag-nextjs-monorepo",
  "version": "1.0.0",
  "description": "RAG (Retrieval-Augmented Generation) application with Next.js frontend and FastAPI backend",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "./run-backend.sh start",
    "dev:backend-simple": "./run-backend.sh start-simple",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd frontend && npm run start",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "./run-backend.sh install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "db:setup": "node scripts/setup-db.js",
    "backend:add": "./run-backend.sh add",
    "backend:add-dev": "./run-backend.sh add-dev",
    "backend:remove": "./run-backend.sh remove",
    "backend:update": "./run-backend.sh update",
    "backend:show": "./run-backend.sh show",
    "backend:shell": "./run-backend.sh shell",
    "clean": "rm -rf node_modules frontend/node_modules frontend/.next package-lock.json",
    "setup": "npm run install:all && npm run db:setup",
    "test:frontend": "cd frontend && npm run lint"
  },
  "keywords": [
    "rag",
    "nextjs",
    "fastapi",
    "python",
    "typescript",
    "ai",
    "chat",
    "vector-search"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {}
}
